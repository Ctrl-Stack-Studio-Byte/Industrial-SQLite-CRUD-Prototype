<Window x:Class="Industrial_SQLite_CRUD_Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Industrial DAQ Prototype" Height="500" Width="700" 
        Background="#F0F0F0" WindowStartupLocation="CenterScreen">

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="0,0,0,20">
      <TextBlock Text="Device Data Historian" FontSize="26" FontWeight="Bold" Foreground="#333"/>
      <TextBlock Text="Real-time data logging simulation" FontSize="14" Foreground="#666"/>
    </StackPanel>

    <GroupBox Grid.Row="1" Header="Historical Data Logs" Padding="10">
      <ListBox x:Name="DataDisplayList" 
                     FontSize="14" 
                     FontFamily="Consolas"
                     DisplayMemberPath="DisplayInfo"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
      </ListBox>
    </GroupBox>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button x:Name="CaptureButton" 
                    Content="Capture New Data" 
                    Width="150" Height="40" 
                    Background="#007ACC" Foreground="White" 
                    FontWeight="Bold" 
                    Click="CaptureData_Click"/>

      <Button Content="Clear View" 
                    Width="100" Height="40" 
                    Margin="10,0,0,0" 
                    Background="#666" Foreground="White"
                    Click="RefreshUI_Click"/>
    </StackPanel>
  </Grid>
</Window>